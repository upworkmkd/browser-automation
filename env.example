# Browser Automation Service - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: OpenAI API Configuration
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# REQUIRED: LinkedIn Credentials
# =============================================================================
# Your LinkedIn email/username
LINKEDIN_USERNAME=your_email@example.com
# Your LinkedIn password
LINKEDIN_PASSWORD=your_linkedin_password

# =============================================================================
# REQUIRED: Quora Credentials
# =============================================================================
# Your Quora email/username
QUORA_EMAIL=your_email@example.com
# Your Quora password
QUORA_PASSWORD=your_quora_password

# =============================================================================
# OPTIONAL: Browser Configuration
# =============================================================================
# Set to 'true' for headless mode (no visible browser), 'false' for visible browser
HEADLESS=false
# Milliseconds to slow down browser actions (useful for debugging)
SLOWMO=100

# =============================================================================
# NOTES:
# =============================================================================
# 1. Never commit your .env file to version control
# 2. Keep your credentials secure and private
# 3. The service will create auth.json automatically for session persistence
# 4. If you encounter login issues, delete auth.json to start fresh
# 5. Some platforms may require 2FA or verification codes on first login

# =============================================================================
# OPTIONAL: Browser Behavior Settings
# Set to 'true' to automatically close browser on success, 'false' to keep it open
AUTO_CLOSE_BROWSER=false

# =============================================================================
# OPTIONAL: OpenAI Model Configuration
# Available models: gpt-4o-mini (fastest, cheapest), gpt-4o (balanced), gpt-4-turbo (most capable)
OPENAI_MODEL=gpt-4o-mini
